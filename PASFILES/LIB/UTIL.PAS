Interface
Uses
  DOS;
Function hex2 (w: Word): String;
Function hex4 (w: Word): String;
(***************************************************************************)
(***************************************************************************)
(***************************************************************************)
(***************************************************************************)
(***************************************************************************)
Implementation
Const
  hx: Array [0..15] Of Char = '0123456789ABCDEF';
Function hex2 (w: Word): String;
Begin
  hex2 := hx [ (w ShR 4) And 15] + hx [w And 15];
End;

Function hex4 (w: Word): String;
Begin
  hex4 := '0x' + hex2 (Hi (w) ) + hex2 (Lo (w) );
End;
Begin
End.